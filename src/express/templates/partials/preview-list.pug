ul.preview__list
  each article in articles
    li.preview__item
      ul.preview__breadcrumbs
        each category in article.categories
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href=`/articles/category/${category.id}`)= category.label
      .preview__background
        img.preview__background-image(src=`/img/${article.photo}` width='460' height='240' alt='Фотография небоскреба')
      time.preview__time(datetime=article.createdDate)= new Date(article.createdAt).toLocaleString()
      h3.preview__name
        a.preview__name-link(href=`/articles/${article.id}`)= article.title
      p.preview__text= article.announce
      a.preview__comment(href=`/articles/${article.id}/comments`)
        | Комментарии
        span.preview__cloud
        b.preview__comment-count= article.comments.length
