mixin formatDate(date, isPost, customClass)
  -
    function formattedDate(date, withTime) {
      const newDate = new Date(date);
      let month = String(newDate.getMonth() + 1);
      let day = String(newDate.getDate());
      const year = String(newDate.getFullYear());
      const hours = String(newDate.getHours());
      let minutes = String(newDate.getMinutes());

      if (month.length < 2) month = "0" + month;
      if (day.length < 2) day = "0" + day;
      if (minutes.length < 2) minutes = "0" + minutes;

      if (withTime) {
        return `${day}.${month}.${year}, ${hours}:${minutes}`
      }

      return `${day}.${month}.${year}`;
    }
  time(datetime=date class=customClass)= formattedDate(date, isPost)

